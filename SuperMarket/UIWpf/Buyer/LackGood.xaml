<UserControl x:Class="SuperMarket.UIWpf.Buyer.LackGood"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuperMarket.UIWpf.Buyer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="630">
    <UserControl.Resources>
        <ControlTemplate TargetType="{x:Type TextBox}" x:Key="textBoxTemplate">
            <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="8,8,8,8" x:Name="ButtonTemplate">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFCBCBCB" Offset="0.0" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid Background="#FFD4CDCD" Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Name="datagird" ColumnWidth="*" HorizontalAlignment="Left" Margin="10,10,10,10" Grid.RowSpan="2" VerticalAlignment="Top" Height="430" Width="610"/>
    </Grid>
</UserControl>
